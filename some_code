#define LOG_UART  1
#define LOG_RTT   2

#define LOG_DEBUG LOG_RTT
#if LOG_DEBUG == LOG_UART
	#include <stdio.h>
	#define log_printf(...) printf(__VA_ARGS__)
#elif LOG_DEBUG == LOG_RTT
	#include "SEGGER_RTT.h"
	#define log_printf(...) SEGGER_RTT_printf(0,__VA_ARGS__)	
#else 
	#define log_printf(...) 
#endif
